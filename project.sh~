#!/bin/sh
echo "Creating necessary folders..."
mkdir ./src
mkdir ./src/images
mkdir ./src/css && touch style.css
mkdir ./src/js && touch index.js
mkdir ./dist
mkdir ./dist/css
mkdir ./dist/js
mkdir ./dist/images
touch index.html

echo "Removing stuff you don't want..."
rm -rf .git
rm Readme.md
rm LICENSE.txt

echo "Ready to go! "
